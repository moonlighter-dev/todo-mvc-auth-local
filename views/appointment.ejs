<div class="container">
    <div class="row">
        <div class="col s4 offset-s8">
            <form action="/appointments/<%= appointment._id %>/cancel?_method=DELETE" method="POST">
            <button class="btn" type="submit">Cancel Appointment</button>
          </form>              
        </div>
    </div>
    <div class="row">
        <div class="col s6">
            <h5>Patient</h5>
                <span><%= patient.firstName + " " + patient.lastName %></span>
            <h5>Appointment Date</h5>
                <span><%= appointment.date %></span>
            <h5>Appointment Time</h5>
                <span><%= appointment.time %></span>
            <h5>Provider</h5>
                <span><%= provider.firstName + " " + provider.lastName %></span>            
        </div>
        <div class="col s6 offset-6">
            <h5>Patient Summary</h5>
            <p><%= appointment.patientSummary %></p>
        <% if (user.status === "provider") { %>
            <h5>Diagnosis</h5>
            <p><%= appointment.diagnosis %></p>
            <h5>Procedures</h5>
            <p><%= appointment.procedures %></p>
            <a class="btn" href="../appointments/<%= appointment._id %>/edit">Edit</a>
        <% } %>
        </div>
    </div>
</div>