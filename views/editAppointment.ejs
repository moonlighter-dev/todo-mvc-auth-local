<div class="container">
    <div class="row">
        <div class="col s4 offset-s8">
            <form action="/appointments/<%= appointment._id %>/cancel?_method=DELETE" method="POST">
            <button class="btn" type="submit">Delete Appointment</button>
          </form>              
        </div>
    </div>
    <div class="row">
        <form action="/appointments/<%= appointment._id %>/edit?_method=PUT" method="POST">
            <div class="col s6">
                <label>Patient</label>
                <input disabled type="text" value="<%= patient.firstName + " " + patient.lastName %>">
                <label>Appointment Date</label>
                <input disabled type="text" name="date" value="<%= appointment.date %>">
                <label>Appointment Time</label>
                <input disabled type="text" name="time" value="<%= appointment.time %>">
                <label>Provider</label>
                <input disabled type="text" value="<%= provider.firstName + " " + provider.lastName %>">          
            </div>
            <div class="col s6 offset-6">
                <div class="input-field col s12">
                    <textarea id="diagnosis" class="materialize-textarea" name="diagnosis"><%= appointment.diagnosis %></textarea>
                    <label for="diagnosis">Diagnosis</label>
                </div>
                <div class="input-field col s12">
                    <textarea id="procedure" class="materialize-textarea" name="procedure"><%= appointment.procedure %></textarea>
                    <label for="procedure">Procedure</label>
                </div>
                <div class="input-field col s12">
                    <textarea id="patientSummary" class="materialize-textarea" name="patientSummary"><%= appointment.patientSummary %></textarea>
                    <label for="patientSummary">Patient Summary</label>
                </div>
            </div>
        </div>
        <button class="btn" type="submit">Update Appointment</button>
    </form>

</div>