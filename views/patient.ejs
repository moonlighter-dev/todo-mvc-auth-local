<div class="container">
    <h2><%= currentPatient.firstName + " " + currentPatient.lastName %></h2>
    <h5><%= currentPatient.email %></h5>
    <a class="btn" href="/appointments/create/<%= currentPatient._id %>">New Appointment</a>
    <table class="highlight centered">
        <thead>
          <tr>
              <th>Date</th>
              <th>Provider</th>
              <th>Edit</th>
              <th>Delete</th>
          </tr>
        </thead>
        <tbody>
            <% appointments.forEach( el => { %>
                <tr>
                    <td><%= el.date %></td>
                    <% providers.forEach(provider => { %>
                        <% if (provider.id == el.providerid) { %>
                            <td><%= provider.firstName + " " + provider.lastName %></td>                            
                        <% } %>
                    <% }) %>
                    <td>
                        <a class="btn" href="/appointments/<%= el._id %>/edit">Edit</a>
                    </td>
                    <td>
                        <form action="/appointments/<%= el._id %>/cancel?_method=DELETE" method="POST">
                        <button class="btn" type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
      </table>
    <h5>Patient Settings</h5>
    <div>
        <a class="btn" href="/patients/<%= currentPatient._id %>/edit">Edit</a>
        <a class="btn" href="/patients/<%= currentPatient._id %>/delete">Delete</a>        
    </div>
</div>