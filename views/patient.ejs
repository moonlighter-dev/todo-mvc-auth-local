<div class="container">
    <h2><%= currentPatient.firstName + " " + currentPatient.lastName %></h2>
    <h5><%= currentPatient.email %></h5>
    <table class="highlight centered">
        <thead>
          <tr>
              <th>Date</th>
              <th>Provider</th>
              <th>Edit</th>
              <th>Delete</th>
          </tr>
        </thead>
        <tbody>
            <% appointments.forEach( el => { %>
                <tr>
                    <td><a href="/appointments/<%= el._id %>"><%= el.date %></a></td>
                    <td><%= providers.find(x => x.id === el.providerid).firstName %></td>
                    <td><a class="btn" href="/appointments/<%= el._id %>/edit">Edit</a></td>
                    <td><a class="btn" href="/appointments/<%= el._id %>/delete">Delete</a></td>
                </tr>
            <% }) %> 
        </tbody>
      </table>
    <span><%=  %></span>
    <h5>Patient Settings</h5>
    <div>
        <a class="btn" href="/patients/<%= currentPatient._id %>/edit">Edit</a>
        <a class="btn" href="/patients/<%= currentPatient._id %>/delete">Delete</a>        
    </div>
</div>