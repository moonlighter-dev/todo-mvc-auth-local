<div class="container">
    <div class="row">
        <h2><%= currentPatient.firstName + " " + currentPatient.lastName %></h2>
        <h5><%= currentPatient.email %></h5>
        <a class="btn right" href="/appointments/create/<%= currentPatient._id %>">New Appointment</a>        
    </div>
    <table class="highlight centered">
        <thead>
          <tr>
              <th>Date</th>
              <th>Time</th>
              <th>Provider</th>
              <th>Edit</th>
          </tr>
        </thead>
        <tbody>
            <% appointments.forEach( el => { %>
                <tr>
                    <td><%= el.date %></td>
                    <td><%= el.time %></td>
                    <% providers.forEach(provider => { %>
                        <% if (provider.id == el.providerid) { %>
                            <td><%= provider.firstName + " " + provider.lastName %></td>                            
                        <% } %>
                    <% }) %>
                    <td>
                        <a class="btn" href="/appointments/<%= el._id %>/edit">Edit</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
      </table>
    <div class="row">
        <h5>Patient Settings</h5>
        <a class="btn" href="/patients/<%= currentPatient._id %>/edit">Edit Patient</a>
    </div>
</div>